    <table>
    <caption class='lead'>Test Results</caption>
        <tr>
            <th>Metric</th>
            <th>Baseline</th>
            <th>Current</th>
            <th>% Change</th>
        </tr>
        <tr>
            <td>CPS</td>
            <td>57115</td>
            <td>$cps</td>
            <td>$(get_pct_change 57115 $cps)</td>
        </tr>
        <tr>
            <td>HPS</td>
            <td>314745</td>
            <td>$hps</td>
            <td>$(get_pct_change 314745 $hps)</td>
        </tr>
        <tr>
            <td>THROUGHPUT</td>
            <td>962017</td>
